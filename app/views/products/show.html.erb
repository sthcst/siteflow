<p style="color: green"><%= notice %></p>

<% content_for :title, "Site Details" %>

<div class="products">
  <h1>Site Details</h1>
  
  <div class="product-detail">
    <%= render @product %>
  </div>

  <div class="product-detail-actions">
    <%= link_to "Edit Product", edit_product_path(@product), class: "btn btn-warning" %>
    <%= link_to "Back to Product", products_path, class: "btn btn-secondary" %>
    <%= button_to "Delete Product", @product, method: :delete, 
                  confirm: "Are you sure you want to delete this Product?", 
                  class: "btn btn-danger" %>
  </div>
</div>
